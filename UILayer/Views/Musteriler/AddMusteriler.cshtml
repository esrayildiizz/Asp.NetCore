@model Musteriler
@{
    Layout = "_Layout"; ViewBag.Title = "Musteriler ekle";
}

<h2>Müşteri ekleme<a asp-action="Index" class="btn btn-sm btn-secondary">Geri</a></h2>

<form asp-action="AddMusteriler">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="AdSoyad">AdSoyad:</label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adres">Adres:</label>
        <input asp-for="Adres" class="form-control" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefon">Telefon:</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Müşteri Ekle</button>
    </div>
</form>
<br />
<br />
<form asp-action="AddMusteriler" method="get">
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary" align="right">Clear Form</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Müşteriler</h2>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr colspan="2">
                <th>Adsoyad</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.AdSoyad</td>

                <td>@Model.Adres</td>

                <td>@Model.Telefon</td>

                <td>@Model.Email</td>

            </tr>
        </tbody>
    </table>
    <div class="alert-info">MÜŞTERİ EKLENDİ!!!</div>
}
